@model AccountLoginVM
@{
    Layout = "_Layout";
    ViewBag.Title = "Login";
}

<div class="loop-create">

    <h3>@ViewBag.Title</h3>
    <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
        <input class="loop-form-input" asp-for="UserName" placeholder="UserName" />
        <span class="loop-error" asp-validation-for="UserName"></span>

        <input class="loop-form-input" asp-for="Password" />
        <span class="loop-error" asp-validation-for="Password"></span>

        <br />
        <input class="loop-button" type="submit" value="@ViewBag.Title" />
    </form>
    <hr />

    <span class="loop-error">Don't have an account?</span>
    <a class="loop-button" asp-controller="Account" asp-action="Create">Create account</a>
    <br />
</div>

@section scripts{
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}
