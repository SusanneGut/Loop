@model MemberCreateVM
@{
    ViewBag.Title = "Create new activity";
    Layout = "_Layout";
    var submitBtn = "Skapa ny aktivitet";
}


<div class="card-body">
    <h5>Create</h5>

    <form asp-controller="Member" asp-action="create">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="ActivityName"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="ActivityName" />
                <span class="font-weight-light text-danger" asp-validation-for="ActivityName"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button style="min-width: 100px" class="btn btn-primary btn-sm">@submitBtn</button>
            </div>
        </div>
    </form>
</div>
@section scripts{
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}